<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationTextStyle">
        <!-- 未选中时的文字样式 -->
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BottomNavigationTextStyle.Selected">
        <!-- 选中时的文字样式 -->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="SettingsIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="SettingsText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="GlassEffectContainer">
        <item name="android:background">@drawable/blur_background</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="RoundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="RoundedCornersSmallImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="BottomNavigationItemStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">0dp</item>
    </style>
</resources>